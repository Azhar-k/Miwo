<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/def_background"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".SignupAcivity">

    <EditText
        android:id="@+id/idemail2"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@android:color/background_light"
        android:ems="10"
        android:gravity="center"
        android:hint="Enter Your Email"
        android:inputType="textEmailAddress"
        android:textColor="@color/def_background"
        android:textColorHint="@color/def_background"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/idpassword2"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:background="@android:color/background_light"
        android:ems="10"
        android:gravity="center"
        android:hint="Enter Your Password"
        android:inputType="textPassword"
        android:textColor="@color/def_background"
        android:textColorHint="@color/def_background"
        android:textSize="18sp" />

    <Button
        android:id="@+id/button4"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:layout_marginTop="60dp"
        android:background="@drawable/round"
        android:onClick="signup"
        android:text="SIGN UP"
        android:textColor="#663B2E"
        android:textSize="28sp"
        android:textStyle="bold" />
</LinearLayout>